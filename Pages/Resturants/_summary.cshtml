@using OdeToFood.Data_Entities
@model Resturant
<div class="card card-group ">
    <div class="card card-header" >
    <h3>@Model.Name</h3>
    </div>
    <div class="card card-body ">
        <span ><b> Location:@Model.Location</b></span>
        <span > <b>Cusine:@Model.Cusine</b></span>

    </div>
    <div class="card-footer" s>
        <a class="btn btn-lg" asp-page="./Detail" asp-route-Id="@Model.ID"><i class="fas fa-info"></i></a>
        <a class="btn btn-lg" asp-page="./Edit" asp-route-ID="@Model.ID"><i class="fas fa-edit"></i></a>
        <a class="btn btn-lg" asp-page="./Delete" asp-route-id="@Model.ID" ><i class="fas fa-trash-alt"></i></a>

    </div>
